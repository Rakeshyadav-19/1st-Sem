#include<stdio.h>
#include<conio.h>
int main()
{

float num1,num2;
char op;
clrscr();

printf("Enter  first number ");
scanf("%f",&num1);
printf("Enter the operator ");
scanf("%s",&op);
printf("Enter second number ");
scanf("%f",&num2);

switch(op)
{
case '+':
printf("The addition is=%f",num1+num2);
break;

case '-':
printf("The substraction is=%f",num1-num2);
break;

case '*':
printf("The multiplication is=%f",num1*num2);
break;

case '/':
printf("The division is=%f",num1/num2);
break;

default:
printf("Invalid operation selected");
break;
}
getch();
return 0;
}